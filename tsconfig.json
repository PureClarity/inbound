{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es2017",
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./lib/",
        "pretty": true,
        "typeRoots": [
          "./node_modules/@types",
          "../../node_modules/@types"
        ]
    },
    "include": ["./src/**/*"]
}